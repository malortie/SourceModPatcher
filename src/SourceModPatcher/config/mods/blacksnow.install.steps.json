[
  {
    "$type": "validate_variables_dependencies",
    "name": "blacksnow_validate_dependencies",
    "description": "Validate $(sourcemod_name) variables dependencies",
    "dependencies": [
      ["sdkbase2013sp_hl2ep2_content_path"]
    ]
  },
  {
    "$type": "copy_files",
    "name": "blacksnow_copy_files",
    "description": "Copy files to $(sourcemod_folder)",
    "depends_on": ["blacksnow_validate_dependencies"],
    "files": [
      {
        "src": "$(data_sdks_source2007_ep2_dir)/bin/client.dll",
        "dest": "$(sourcemod_dir)/bin/client.dll"
      },
      {
        "src": "$(data_sdks_source2007_ep2_dir)/bin/server.dll",
        "dest": "$(sourcemod_dir)/bin/server.dll"
      },
      {
        "src": "$(data_sdks_source2007_episodic_dir)/models/Humans/female_shared.ani",
        "dest": "$(sourcemod_dir)/models/Humans/female_shared.ani"
      },
      {
        "src": "$(data_sdks_source2007_episodic_dir)/models/Humans/female_shared.mdl",
        "dest": "$(sourcemod_dir)/models/Humans/female_shared.mdl"
      },
      {
        "src": "$(data_sdks_source2007_episodic_dir)/models/Humans/male_gestures.ani",
        "dest": "$(sourcemod_dir)/models/Humans/male_gestures.ani"
      },
      {
        "src": "$(data_sdks_source2007_episodic_dir)/models/Humans/male_gestures.mdl",
        "dest": "$(sourcemod_dir)/models/Humans/male_gestures.mdl"
      },
      {
        "src": "$(data_sdks_source2007_episodic_dir)/models/Humans/male_shared.ani",
        "dest": "$(sourcemod_dir)/models/Humans/male_shared.ani"
      },
      {
        "src": "$(data_sdks_source2007_episodic_dir)/models/Humans/male_shared.mdl",
        "dest": "$(sourcemod_dir)/models/Humans/male_shared.mdl"
      },
      {
        "src": "$(data_sourcemod_dir)/gameinfo.txt",
        "dest": "$(sourcemod_dir)/gameinfo.txt"
      },
      {
        "src": "$(data_sourcemod_dir)/materials/console/blacksnow_menu1.vmt",
        "dest": "$(sourcemod_dir)/materials/console/blacksnow_menu1.vmt"
      },
      {
        "src": "$(data_sourcemod_dir)/materials/console/blacksnow_menu1.vtf",
        "dest": "$(sourcemod_dir)/materials/console/blacksnow_menu1.vtf"
      },
      {
        "src": "$(data_sourcemod_dir)/materials/console/blacksnow_menu1_widescreen.vmt",
        "dest": "$(sourcemod_dir)/materials/console/blacksnow_menu1_widescreen.vmt"
      },
      {
        "src": "$(data_sourcemod_dir)/materials/console/blacksnow_menu1_widescreen.vtf",
        "dest": "$(sourcemod_dir)/materials/console/blacksnow_menu1_widescreen.vtf"
      },
      {
        "src": "$(data_sourcemod_dir)/materials/console/blacksnow_menu2_widescreen.vmt",
        "dest": "$(sourcemod_dir)/materials/console/blacksnow_menu2_widescreen.vmt"
      },
      {
        "src": "$(data_sourcemod_dir)/materials/console/blacksnow_menu2_widescreen.vtf",
        "dest": "$(sourcemod_dir)/materials/console/blacksnow_menu2_widescreen.vtf"
      },
      {
        "src": "$(data_sourcemod_dir)/scripts/HudLayout.res",
        "dest": "$(sourcemod_dir)/scripts/HudLayout.res"
      }
    ]
  },
  {
    "$type": "replace_tokens",
    "name": "blacksnow_replace_tokens",
    "description": "Replace tokens in $(sourcemod_folder)/gameinfo.txt",
    "depends_on": ["blacksnow_copy_files"],
    "files": [
      "$(sourcemod_dir)/gameinfo.txt"
    ]
  }
]