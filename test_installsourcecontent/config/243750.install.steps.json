[
  {
    "$type": "extract_vpk",
    "name": "sdkbase2013mp_hl2_extract_content",
    "description": "Extract $(steamapp_name) HL2 content",
    "vpks": [
      {"vpk": "hl2/hl2_misc_dir.vpk"},
      {"vpk": "hl2/hl2_sound_misc_dir.vpk"},
      {"vpk": "hl2/hl2_sound_vo_*_dir.vpk"},
      {"vpk": "hl2/hl2_textures_dir.vpk"}
    ],
    "files_to_exclude": [
      "^.*.dll$",
      "^.*.bin$"
    ],
    "outdir": "$(install_settings_install_dir)/hl2"
  },
  {
    "$type": "save_variable",
    "name": "sdkbase2013mp_hl2_save_variable",
    "description": "Add $(steamapp_name) HL2 install path to $(variables_config_file_name)",
    "depends_on": ["sdkbase2013mp_hl2_extract_content"],
    "variable_name": "sdkbase2013mp_hl2_content_path",
    "variable_value": "$(install_settings_install_dir)/hl2"
  },
  {
    "$type": "extract_vpk",
    "name": "sdkbase2013mp_hl2mp_extract_content",
    "description": "Extract $(steamapp_name) HL2MP content",
    "vpks": [{"vpk": "hl2mp/hl2mp_pak_dir.vpk"}],
    "files_to_exclude": [
      "^.*.dll$",
      "^.*.bin$"
    ],
    "outdir": "$(install_settings_install_dir)/hl2mp"
  },
  {
    "$type": "save_variable",
    "name": "sdkbase2013mp_hl2mp_save_variable",
    "description": "Add $(steamapp_name) HL2MP install path to $(variables_config_file_name)",
    "depends_on": ["sdkbase2013mp_hl2mp_extract_content"],
    "variable_name": "sdkbase2013mp_hl2mp_content_path",
    "variable_value": "$(install_settings_install_dir)/hl2mp"
  }
]