{
  "coastline_to_atmosphere": [
    {
      "$type": "copy_files",
      "name": "coastline_to_atmosphere_copy_files",
      "description": "Copy files to $(sourcemod_folder)",
      "files": [
        {
          "src": "$(data_sourcemod_dir)/gameinfo.txt",
          "dest": "$(sourcemod_dir)/gameinfo.txt"
        }
      ]
    },
    {
      "$type": "replace_tokens",
      "name": "coastline_to_atmosphere_replace_tokens",
      "description": "Replace tokens in $(sourcemod_folder)/gameinfo.txt",
      "depends_on": ["coastline_to_atmosphere_copy_files"],
      "files": [
        "$(sourcemod_dir)/gameinfo.txt"
      ]
    }
  ],
  "ravenholmncz": [
    {
      "$type": "copy_files",
      "name": "ravenholmncz_copy_files",
      "description": "Copy files to $(sourcemod_folder)",
      "files": [
        {
          "src": "$(data_sdks_source2006_dir)/bin/client.dll",
          "dest": "$(sourcemod_dir)/bin/client.dll"
        },
        {
          "src": "$(data_sdks_source2006_dir)/bin/server.dll",
          "dest": "$(sourcemod_dir)/bin/server.dll"
        },
        {
          "src": "$(data_sourcemod_dir)/gameinfo.txt",
          "dest": "$(sourcemod_dir)/gameinfo.txt"
        }
      ]
    },
    {
      "$type": "replace_tokens",
      "name": "ravenholmncz_replace_tokens",
      "description": "Replace tokens in $(sourcemod_folder)/gameinfo.txt",
      "depends_on": ["ravenholmncz_copy_files"],
      "files": [
        "$(sourcemod_dir)/gameinfo.txt"
      ]
    }
  ],
  "research_and_development": [
    {
      "$type": "validate_variables_dependencies",
      "name": "research_and_development_validate_dependencies",
      "dependencies": [
        ["hl2ep2_content_path", "sdkbase2013sp_hl2ep2_content_path"]
      ]
    },
    {
      "$type": "copy_files",
      "name": "research_and_development_copy_files",
      "description": "Copy files to $(sourcemod_folder)",
      "depends_on": ["research_and_development_validate_dependencies"],
      "files": [
        {
          "src": "$(data_sdks_source2007_dir)/bin/client.dll",
          "dest": "$(sourcemod_dir)/bin/client.dll"
        },
        {
          "src": "$(data_sdks_source2007_dir)/bin/server.dll",
          "dest": "$(sourcemod_dir)/bin/server.dll"
        },
        {
          "src": "$(data_sourcemod_dir)/gameinfo.txt",
          "dest": "$(sourcemod_dir)/gameinfo.txt"
        }
      ]
    },
    {
      "$type": "replace_tokens",
      "name": "research_and_development_replace_tokens",
      "description": "Replace tokens in $(sourcemod_folder)/gameinfo.txt",
      "depends_on": ["research_and_development_copy_files"],
      "files": [
        "$(sourcemod_dir)/gameinfo.txt"
      ]
    }
  ]
}
