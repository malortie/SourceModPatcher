[
  {
    "$type": "validate_variables_dependencies",
    "name": "hoe_validate_dependencies",
    "description": "Validate $(sourcemod_name) variables dependencies",
    "dependencies": [
      ["hl1_content_path"],
      ["sdkbase2013sp_hl2ep2_content_path"]
    ]
  },
  {
    "$type": "copy_files",
    "name": "hoe_copy_files",
    "description": "Copy files to $(sourcemod_folder)",
    "depends_on": ["hoe_validate_dependencies"],
    "files": [
      {
        "src": "$(data_sourcemod_dir)/gameinfo.txt",
        "dest": "$(sourcemod_dir)/gameinfo.txt"
      },
      {
        "src": "$(data_sourcemod_dir)/resource/ClientScheme.res",
        "dest": "$(sourcemod_dir)/resource/ClientScheme.res"
      }
    ]
  },
  {
    "$type": "replace_tokens",
    "name": "hoe_replace_tokens",
    "description": "Replace tokens in $(sourcemod_folder)/gameinfo.txt",
    "depends_on": ["hoe_copy_files"],
    "files": [
      "$(sourcemod_dir)/gameinfo.txt"
    ]
  }
]