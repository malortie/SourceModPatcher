[
  {
    "$type": "copy_files",
    "name": "ravenholmncz_copy_files",
    "description": "Copy files to $(sourcemod_folder)",
    "files": [
      {
        "src": "$(data_sdks_source2006_hl2_dir)/bin/client.dll",
        "dest": "$(sourcemod_dir)/bin/client.dll"
      },
      {
        "src": "$(data_sdks_source2006_hl2_dir)/bin/server.dll",
        "dest": "$(sourcemod_dir)/bin/server.dll"
      },
      {
        "src": "$(data_sourcemod_dir)/gameinfo.txt",
        "dest": "$(sourcemod_dir)/gameinfo.txt"
      },
      {
        "src": "$(data_sourcemod_dir)/resource/OptionsSubAudio.res",
        "dest": "$(sourcemod_dir)/resource/OptionsSubAudio.res"
      },
      {
        "src": "$(data_sourcemod_dir)/resource/OptionsSubVideoAdvancedDlg.res",
        "dest": "$(sourcemod_dir)/resource/OptionsSubVideoAdvancedDlg.res"
      }
    ]
  }
]