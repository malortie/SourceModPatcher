[
  {
    "$type": "extract_vpk",
    "name": "hl1_extract_content",
    "description": "Extract $(steamapp_name) content",
    "vpks": [{"vpk": "hl1/hl1_pak_dir.vpk"}],
    "files_to_exclude": [
      "^.*.dll$",
      "^.*.bin$"
    ],
    "outdir": "$(install_settings_install_dir)"
  },
  {
    "$type": "save_variable",
    "name": "hl1_save_variable",
    "description": "Add $(steamapp_name) install path to $(variables_config_file_name)",
    "depends_on": ["hl1_extract_content"],
    "variable_name": "hl1_content_path",
    "variable_value": "$(install_settings_install_dir)"
  },
  {
    "$type": "extract_vpk",
    "name": "hl1_hd_extract_content",
    "description": "Extract $(steamapp_name) HD content",
    "vpks": [{"vpk": "hl1_hd/hl1_hd_pak_dir.vpk"}],
    "files_to_exclude": [
      "^.*.dll$",
      "^.*.bin$"
    ],
    "outdir": "$(install_settings_install_dir)/hl1_hd"
  },
  {
    "$type": "save_variable",
    "name": "hl1_hd_save_variable",
    "description": "Add $(steamapp_name) HD install path to $(variables_config_file_name)",
    "depends_on": ["hl1_hd_extract_content"],
    "variable_name": "hl1_hd_content_path",
    "variable_value": "$(install_settings_install_dir)/hl1_hd"
  }
]